<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ClientApp.MainWindow"
        Width="400" Height="300" Title="Client App">
    <StackPanel>
        <TextBox x:Name="MessageBox" Width="300" Margin="10" />
        <Button Content="Send" Click="OnSendButtonClick" Width="100" Margin="10" />
        <TextBlock x:Name="ServerMessages" Margin="10" />
    </StackPanel>
</Window>
