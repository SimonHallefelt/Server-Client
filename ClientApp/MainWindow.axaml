<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ClientApp.MainWindow"
        Width="600" 
		Height="300" 
		MinWidth="200"
		MinHeight="100"
		Title="Client App">
<Grid>
	
	<Grid.ColumnDefinitions>
		<ColumnDefinition Width="Auto" MaxWidth="150" MinWidth="100" />
		<ColumnDefinition Width="*"/>
	</Grid.ColumnDefinitions>
			
	<Grid.RowDefinitions>
		<RowDefinition Height="30"/>
		<RowDefinition Height="*"/>
	</Grid.RowDefinitions>

	<Border Grid.ColumnSpan="2" Background="Gray" Padding="5">
		<TextBlock 
			Text="Client Chat"
			FontSize="16"
			FontWeight="Bold"
			TextAlignment="Center"
			VerticalAlignment="Center"/>
	</Border>

	<Grid Grid.Column="0" Grid.Row="1" Background="LightBlue" VerticalAlignment="Stretch">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		
		<StackPanel Grid.ColumnSpan="2" Grid.Row="0" Background="LightBlue" VerticalAlignment="Stretch">

		</StackPanel>

		<Grid Grid.ColumnSpan="2" Grid.Row="1" Background="LightGray" VerticalAlignment="Stretch">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<Grid.RowDefinitions>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>
			
			<TextBlock Grid.Column="0" Grid.Row="0" Text="User:" VerticalAlignment="Center" Margin="5"/>
			<TextBox Grid.Column="1" Grid.Row="0" MaxLength="5" VerticalAlignment="Center" Margin="5"/>

			<TextBlock Grid.Column="0" Grid.Row="1" Text="Password:" VerticalAlignment="Center" Margin="5"/>
			<TextBox Grid.Column="1" Grid.Row="1" MaxLength="5" VerticalAlignment="Center" Margin="5"/>
		</Grid>
	</Grid>
			
			


	<Grid Grid.Column="1" Grid.Row="1" Background="Gray" VerticalAlignment="Stretch">
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
			
		<StackPanel Grid.Row="0" Background="Aqua" VerticalAlignment="Stretch">

			<Border BorderBrush="Black" BorderThickness="2" CornerRadius="5" Margin="10">
				<TextBlock x:Name="ServerMessages" Margin="10" />
			</Border>
		
		</StackPanel>
			
		<StackPanel Grid.Row="1" Orientation="Horizontal" >
			<TextBox x:Name="MessageInput"
						Width="300"
						Height="30"
						Margin="10,5,10,5"
						TextWrapping="Wrap"
						FontSize="14"
						AcceptsReturn="True"
						Watermark="Type Here"/>
					
			<Border BorderBrush="Black" BorderThickness="2" CornerRadius="5" Margin="10">
				<Button Content="Send" FontWeight="Bold" Click="OnSendButtonClick"  Padding="10,5" />
			</Border>
		</StackPanel>
	</Grid>

</Grid>

</Window>

